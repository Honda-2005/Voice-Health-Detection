# MongoDB Configuration
# IMPORTANT: Get your MongoDB connection string from MongoDB Atlas dashboard
# NEVER commit the actual .env file with real credentials!
MONGODB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/
MONGODB_DB_NAME=voice_health_detection

# JWT Configuration
# Generate a strong secret key: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
SECRET_KEY=your_super_secret_key_here_use_crypto_to_generate_min_64_chars
JWT_SECRET_KEY=your_jwt_secret_key_here_use_crypto_to_generate
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8000

# Application Configuration
APP_NAME=Voice Health Detection
APP_VERSION=2.0.0
DEBUG=true
NODE_ENV=development

# Port Configuration
PORT=5000

# Machine Learning Service Configuration
ML_SERVICE_URL=http://localhost:5001
ML_SERVICE_PORT=5001
ML_MODEL_PATH=./ml-service/models/model.joblib
SCALER_PATH=./ml-service/models/scaler.joblib

# Email Service (Optional - Configure if using email features)
# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# Option 2: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Skip email verification in development (set to false in production)
SKIP_EMAIL_VERIFICATION=true

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5000

# Logging Configuration
LOG_LEVEL=info

# Audio Upload Configuration
MAX_AUDIO_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=wav,webm,mp3,ogg,flac
MIN_AUDIO_DURATION_SEC=1
MAX_AUDIO_DURATION_SEC=300
