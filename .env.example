# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==================== MongoDB Configuration ====================
# Get your MongoDB Atlas connection string from: https://cloud.mongodb.com
MONGODB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/voice_health
MONGODB_DB_NAME=voice_health_detection

# ==================== JWT Configuration ====================
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=YOUR_GENERATED_SECRET_HERE_REPLACE_THIS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ==================== CORS Configuration ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# ==================== Application Configuration ====================
APP_NAME=Voice Health Detection
APP_VERSION=2.0.0
NODE_ENV=development
DEBUG=false

# ==================== Port Configuration ====================
PORT=5000
ML_SERVICE_PORT=5001

# ==================== ML Service Configuration ====================
ML_SERVICE_URL=http://localhost:5001
ML_MODEL_PATH=./ml-service/models/model.joblib
SCALER_PATH=./ml-service/models/scaler.joblib

# ==================== Redis Configuration (Optional - for caching) ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== Email Configuration (Optional) ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@voicehealth.com

# ==================== File Upload Configuration ====================
MAX_FILE_SIZE_MB=10
ALLOWED_AUDIO_TYPES=audio/wav,audio/mpeg,audio/mp3

# ==================== Security Configuration ====================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ==================== Monitoring (Optional) ====================
SENTRY_DSN=
LOG_LEVEL=info
